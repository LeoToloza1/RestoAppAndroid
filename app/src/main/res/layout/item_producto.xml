<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_default_radius"
    android:padding="@dimen/cardview_default_radius"
    android:backgroundTint="@color/colorOnPrimary"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagen_prod"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:src="@drawable/picturestock" />

        <TextView
            android:id="@+id/nombre_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="@color/colorOnBackground"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/descripcion_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="DescripciÃ³n"
            android:textAlignment="center"
            android:textColor="@color/colorOnBackground"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/precio_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Precio$$$$"
            android:textAlignment="center"
            android:textColor="@color/colorOnBackground"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkbox_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@color/colorOnBackground"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Agregar al pedido" />

        <EditText
            android:id="@+id/CantidaProductos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ingrese una cantidad"
            android:ems="10"
            android:inputType="numberSigned" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
